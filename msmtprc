defaults
auth on
tls on
# Same as sslcacertfile in ~/.offlineimaprc
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account personal
tls_starttls on
host smtp.gmail.com
user fran.penedo@gmail.com
passwordeval python2 -c "import keyring; print keyring.get_password('gmail', 'personal')"
# The value of `from` is only used when you're not using sup.
# But it is necessary if you're testing things out.
from fran.penedo@gmail.com
port 587

account bu
tls_starttls on
host smtp.gmail.com
port 587
from franp@bu.edu
user franp@bu.edu
passwordeval python2 -c "import keyring; print keyring.get_password('gmail', 'bu')"

account domain
# tls_certcheck off
# tls_starttls off
# tls_trust_file
host smtp.zoho.com
port 587
from fran@franpenedo.com
user fran@franpenedo.com
passwordeval python2 -c "import keyring; print keyring.get_password('gmail', 'domain')"


account default : personal
